script#activity-template(type="text/template")
	.row-fluid
		.span12
			.avatar
				a(href="#")
					<img class="avatar-img" src="<%= $.gravatar(actor.email, { size: 50 }) %>" />
			.mainWrapper
				p
					<%= message %> 
					small (<%= moment(created_at).fromNow() %>)
				.row-fluid
					span12 
						<% if (object_type == 'WikiPage' && verb == 'edit') {%>
						.diff
							p.diff-content <%= generate_diff(diff).html() %>
							p
								a.toggle-diff(href="#toggle-diff") Show difference
						<% }%>						
				.row-fluid
					.embeded-content
	.row-fluid
		.span12
			hr

